<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.openza.tasks</id>
  <name>Openza Tasks</name>
  <summary>Unified Task Manager for Todoist and Microsoft To-Do</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer id="com.openza">
    <name>Openza</name>
  </developer>
  <description>
    <p>
      Openza Tasks is a unified task manager that brings together your tasks from
      Todoist, Microsoft To-Do, and local storage in one place.
    </p>
    <p>Features:</p>
    <ul>
      <li>Connect to Todoist using your API key</li>
      <li>Connect to Microsoft To-Do with OAuth sign-in</li>
      <li>Create and manage local tasks offline</li>
      <li>Unified view of all your tasks across providers</li>
      <li>Today view for tasks due today</li>
      <li>Overdue tasks tracking</li>
    </ul>
  </description>
  <launchable type="desktop-id">com.openza.tasks.desktop</launchable>
  <url type="homepage">https://github.com/openza/tasks</url>
  <url type="bugtracker">https://github.com/openza/tasks/issues</url>
  <content_rating type="oars-1.1" />
  <categories>
    <category>Office</category>
    <category>ProjectManagement</category>
  </categories>
  <keywords>
    <keyword>tasks</keyword>
    <keyword>todo</keyword>
    <keyword>todoist</keyword>
    <keyword>microsoft</keyword>
    <keyword>productivity</keyword>
  </keywords>
  <releases>
    <release version="0.1.4" date="2025-12-13">
      <description>
        <p>Added AppStream metadata for better software center integration</p>
      </description>
    </release>
    <release version="0.1.3" date="2025-12-13">
      <description>
        <p>Initial release with Linux packaging</p>
        <ul>
          <li>Todoist integration via API key</li>
          <li>Microsoft To-Do integration via OAuth</li>
          <li>Local task storage</li>
          <li>Provider selector in sidebar</li>
        </ul>
      </description>
    </release>
  </releases>
  <branding>
    <color type="primary" scheme_preference="light">#3b82f6</color>
